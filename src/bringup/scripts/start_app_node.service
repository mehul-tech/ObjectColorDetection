[Unit]
Description=start node
After=NetworkManager.service time-sync.target

[Service]
Type=simple
User=ubuntu
Restart=always
RestartSec=30
KillMode=mixed
ExecStart=/bin/bash -c 'source home/ubuntu/.bashrc; ros2 launch bringup bringup.launch.py;'
#StandardOutput=null
#StandardError=null

[Install]
WantedBy=multi-user.target
